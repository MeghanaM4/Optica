import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.speech.tts.TextToSpeech;
import android.widget.EditText;
import java.util.Locale;

public class MainActivity extends AppCompatActivity {

    EditText TEXTVARIABLE;
    TextToSpeech TTSVARIABLE;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        TEXTVARIABLE = findViewById(R.id.TEXTVARIABLE);

        // Initialize TextToSpeech
        TTSVARIABLE = new TextToSpeech(getApplicationContext(), new TextToSpeech.OnInitListener() {
            @Override
            public void onInit(int i) {
                if (i != TTSVARIABLE.ERROR) {
                    TTSVARIABLE.setLanguage(Locale.UK);

                    // Call the text-to-speech function after initialization
                    convertTextToSpeech();
                }
            }
        });
    }

    // Separate function to handle text-to-speech
    public void convertTextToSpeech() {
        String textToConvert = TEXTVARIABLE.getText().toString();
        if (!textToConvert.isEmpty()) {
            TTSVARIABLE.speak(textToConvert, TTSVARIABLE.QUEUE_FLUSH, null);
        }
    }
}
